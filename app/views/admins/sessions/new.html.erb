<div class="container">
  <div class="m-3 mb-2">
    <span class="bg-light">　管理者ログイン　</span>
  </div>
  <div class="admin_signin">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <%= f.label :email, "メールアドレス", class: "col-2" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "col-6" %>
    </div>
    
    <div class="row justify-content-center admin_session_pass">
      <%= f.label :password, "パスワード", class: "col-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-6" %>
    </div>

    <div class="admin_session_actions row">
      <div class="col-4"></div>
      <%= f.submit "　ログイン　", class: "btn btn-primary " %>
    </div>
    <% end %>
  
  </div>
</div>
