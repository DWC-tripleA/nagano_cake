<div class="container">
  <div class="p-3 mb-2">
    <span class="bg-light">　管理者ログイン　</span>
  </div>
  <div class="admin_signin">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row">
      <%= 
      <%= f.label :email, "メールアドレス", class: "col-2" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "col-6" %>
    </div>
 
    
      <div class="field row">
        <%= f.label :password, "パスワード", class: "col-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-6" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    <%= render "admins/shared/links" %>
  </div>
</div>
