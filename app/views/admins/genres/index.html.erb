<h2>ジャンル一覧・追加</h2>
<div class="genre_new_form">
  <%= form_with model: @genre,url: admins_genres_path, local: true do |f| %>
    <%= f.label:name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  <% end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @genres %>
