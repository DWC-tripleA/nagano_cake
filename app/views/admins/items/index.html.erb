<h2>商品一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to "#{item.name}", admins_item_path(item), :style => "color: black;text-decoration: underline" %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <% if item.is_active == true %>
      <td>販売ステータス</td>
      <td style="color:green;">販売中</td>
      <% elsif %>
      <td>販売ステータス</td>
      <td style="color:gray;">販売停止中</td>
      <% end %>
     </tr>
     <% end %>
  </tbody>
</table>
<%= paginate @items %>
