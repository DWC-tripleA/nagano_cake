<h2>商品新規登録</h2>
<%= form_with model: @item,url: admins_items_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name  %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "商品説明" %><br>
    <%= f.text_area :introduction %>
  </div>
  
  <div class="form-group">
     <%=f.label :price, "税抜価格" %>
     <%= f.text_field :price %><span>円</span>
  </div>
  

  <div class="form-group">
    <%=f.label:"販売ステータス"%>
    <div>
      <%= f.radio_button :is_active, "販売中",checked: true %>
      <%= f.label :is_active, "販売中", value: :true %>
    </div>
    
    <div>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中",value: :false %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>
 
<% end %>
