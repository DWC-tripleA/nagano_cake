<h2 class="head-line">商品詳細</h2>
<div class="item_image">
  <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg",size:"300x300" %>
</div>
<div>
  <table>
    <tr>
      <td>商品名</td>
      <td><%=@item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td></td>
      <!--@item.genre.name %>-->
    </tr>
    <tr>
      <td>税込価格</td>
      <td><%= @item.price %></td>
    </tr>
    <tr>
      <% if @item.is_active == true %>
      <td>販売ステータス</td>
      <td style="color:green;">販売中</td>
      <% elsif @item.is_active == false %>
      <td>販売ステータス</td>
      <td style="color:gray;">販売停止中</td>
      <% end %>
    </tr>
  </table>
</div>
<div>
  <%= link_to "編集する", edit_admins_item_path(@item),class:"btn btn-success"%>
</div>
