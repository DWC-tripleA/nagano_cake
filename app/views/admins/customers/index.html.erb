<div class="container">
  <div class="row mt-4 position-relative">
    <div class="row col-8">
      <p class="col-2"></p>
      <p class="col-3 fs-5 bg-light">会員一覧</p>
      
      <div class="text">
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.last_name + "" + customer.first_name,admins_customer_path(customer.id) %></td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.is_deleted == true%>
                  <p class="text-secondary">退会</p>
                  <% else %>
                  <p class="text-success">有効</p>
                  <% end %>
                </td>
              </tr>
            <% end %>  
            <%= paginate @customers %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>