<h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model: @customer, local: true do |f| %>
  <div class="form-group">
    <%= f.label :会員ID %>
    <%= @customer.id %>
  </div>

  <div class="form-group">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postcode, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.telephone_field :phone_number, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :会員ステータス %><br />
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効" %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会" %>
  </div>

  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>