<div class="container">
  <div class="mt-5">
    <span class="fs-3 fst-italic offset-md-1 bg-light">ログイン</span>
  </div>
  <div class="mt-3">
    <span class="fs-6 fst-italic offset-md-1 bg-light">会員の方はこちらからログイン</span>
  </div>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inline">
      <%= f.label :メールアドレス, class:"offset-2 col-2 mt-5" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード, class:"offset-2 col-2 mt-3" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field offset-2 mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :メールアドレスとパスワードを保存する %>
      </div>
    <% end %>

    <div class="actions offset-4 mt-4">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <span class="fs-6 fst-italic offset-md-1 bg-light">会員登録がお済みでない方</span>
  </div>

  <div class="offset-3 mt-5">
    <%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください.
  </div>
</div>

</div>