<div class="container">
  <div class="mt-5">
    <span class="fs-3 fst-italic offset-md-1 bg-light">新規会員登録</span>
  </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前 %><br/>
          （姓）<%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
          （名）<%= f.text_field :first_name, autofocus: true, placeholder:"道子" %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %><br />
          （セイ）<%= f.text_field :last_name_kana, autofocus: true %>
          （メイ）<%= f.text_field :first_name_kana, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %><br />
          <%= f.text_field :postcode, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.telephone_field :phone_number, autofocus: true %>
        </div>


        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      <p>既に登録済の方はこちらからログインしてください</p>
      <%= render "customers/shared/links" %>

</div>