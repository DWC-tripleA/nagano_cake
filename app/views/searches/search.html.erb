<% if @model == "item" %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
  <div class='col-md-7'></div>
  <div class='col-md-11 offset-md-1'>
    <h2>商品"<%= @content %>"(全<%= @records.count %>件)</h2>
    <div class="item_new">
        <% 	@records.each do |item| %>
        <div class="item_icon">
          <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image,class:'item_visual' %>
          <% end %>
          <p>商品名：<%= item.name %></p>
          <p>金額：¥<%= item.price %>(税込)</p>
        </div>
        <% end %>
    </div> 
  </div>
  </div>
</div>
<% elsif @model == "genre" %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
  <div class='col-md-7'></div>
  <div class='col-md-11 offset-md-1'>
    <h2>ジャンル"<%= @content %>"(全<%= @records_genre.count %>件)</h2>
    <div class="item_new">
        <% 	@records_genre.each do |item| %>
        <div class="item_icon">
          <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image,class:'item_visual' %>
          <% end %>
          <p>商品名：<%= item.name %></p>
          <p>金額：¥<%= item.price %>(税込)</p>
        </div>
        <% end %>
    </div> 
  </div>
</div>
</div>

<% elsif @model == "customer"  %>
  <div class="container">
  <div class="row mt-4">
    <div class="row col-8">
      <p class="col-2"></p>
      <p class="col-4 fs-5 bg-light text-center">顧客"<%= @content %>"(全<%= @records.count %>件)</p>
    </div>
      
    <div class="row col-8 mx-auto">
      <table class='table table-hover table-inverse '>
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |customer| %>
            <tr valign="middle" class="lh-lg">
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + "" + customer.first_name,admins_customer_path(customer.id),:style => "color: black;text-decoration: underline" %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true%>
              <td class="fw-light" style="color: gray">退会</td>
              <% else %>
              <td class="fw-bold" style="color:green">有効</td>
              <% end %>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
    </div>
  </div>
<% end %>
