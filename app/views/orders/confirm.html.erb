<div class='container px-5 px-sm-0'>
  <div class='row'>
  <div class='col-md-7'>
     
      
      
  </div>
  
  <div class='col-md-11 offset-md-1'>
    <h3>注文情報確認</h3>
     
　<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.price %></td>
        <td><%= cart_item.amount %></td>
          
        <td><%= cart_item.item.price*cart_item.amount %> </td>
      
      </tr>
    <% end %>
    
    
  </tbody>
  </table>

  <tr>
    <td>支払い方法</td><td><%= @order.payment_method %></td>
  </tr>

  <tr>
    <td>お届け先</td>
    <td>〒<%= @order.postal_code %> <%= @order.address %>
        <%= @order.name %></td>
  </tr>
  
  <tr><td>送料</td><td>¥<%= @order.shipping_cost %></td></tr>
  <tr><td>商品合計</td><td>¥ <%= @total_payment.round.to_s(:delimited) %></td></tr>
  <tr><td>請求金額</td><td><%= @total_payment + @order.shipping_cost %> </td></tr>
   
   <%= form_with model:@order,url: orders_path,method: :post,local:true do |f| %>
   <%= f.hidden_field :customer_id, value: current_customer.id %>
   <%= f.hidden_field :postal_code, value: @order.postal_code %>
   <%= f.hidden_field :address, value: @order.address %>
   <%= f.hidden_field :name, value: @order.name %>
   <%= f.hidden_field :shipping_cost, value: 800 %>
   <%= f.hidden_field :total_payment, value:  @total_payment %>
   <%= f.hidden_field :payment_method, value: @order.payment_method %>
   
   <%= f.submit "注文を確定する" %>
   <% end %>
  </div>
</div>