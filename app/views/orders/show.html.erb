<div class="container">
  <div class="row mt-4">
    <div class="row col-8">
      <p class="col-2"></p>
      <p class="col-2 fs-5 bg-light text-center">注文履歴詳細</p>
    </div>
      
    <div class="row col-8 mx-auto">
    <p>注文情報</p>    
      <table class='table table-hover table-inverse '>
        <tbody>
            <tr valign="middle" class="lh-lg">
              <td>注文日</td><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr valign="middle" class="lh-lg">
              <td>配送先</td><td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
            </tr>
            <tr valign="middle" class="lh-lg">
              <td>支払方法</td><td><%= @order.payment_method %></td>
            </tr>
            <tr valign="middle" class="lh-lg">
              <td>ステータス</td><td><%= @order.status %></td>
            </tr>
        </tbody>
      </table>
      
      <p>注文内容</p>
      <table class='table table-hover table-inverse '>
        <thead>
         <th>商品</th>
         <th>単価（税込)</th>
         <th>個数</th>
         <th>小計</th>
        </thead> 
       <tbody>
        <% @order_details.each do |order_detail| %>  
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td><%= order_detail.item.price %></td>
            <td><%= order_detail.amount %></td>
              
            <td><%= order_detail.price %>
            </td>
          
          </tr>
        <% end %>
      </tbody>
      </table>
      
      <table class='table table-hover table-inverse '>
       <tbody>
          <tr>
            <td>商品合計</td><td><%= @order.total_payment-800 %></td>
          </tr>
          <tr>
          <td>配送料</td><td><%= @order.shipping_cost %></td>
          </tr>
          <tr> 
          <td>ご請求額</td><td><%= @order.total_payment %></td>
          </tr>  
      </tbody>
      </table>
      
      
      
    </div>
    </div>
  </div>
</div>